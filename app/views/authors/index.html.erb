<h1>Listing Authors</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
  </tr>
 
  <% @authors.each do |author| %>
    <tr>
      <td><%= link_to author.name, author_path(author) %></td>
      <td><%= link_to author.homepage, "http://#{author.homepage}" %></td>
      <td><%= link_to "Edit", edit_author_path(author) %></td>
      <td><%= link_to "Delete", author_path(author), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>

<br />
<%= link_to "New", new_author_path %>